{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["app/**/*.ts", "app.ts", "router/**/*.ts", "controller/**/*.ts", "model/**/*.ts", "middleware/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}